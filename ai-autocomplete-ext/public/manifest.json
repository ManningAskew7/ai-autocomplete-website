{
  "manifest_version": 3,
  "name": "AI Autocomplete - Smart Text Predictions",
  "version": "0.2.0",
  "description": "Get intelligent text completions powered by AI. Works on any website with privacy-focused design.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "optional_permissions": [
    "clipboardWrite",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "https://openrouter.ai/*",
    "https://extensionpay.com/*",
    "https://api.extensionpay.com/*"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://localhost/*",
    "file:///*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "AI Autocomplete Settings",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "commands": {
    "manual-inject": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "Manually activate AI Autocomplete on current page"
    }
  },
  "author": "AI Autocomplete Team",
  "homepage_url": "https://manningaskew7.github.io/ai-autocomplete-website/"
}